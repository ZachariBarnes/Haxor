<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_light_bg">

    <TextView
        android:text="Credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CreditsTitleTxt"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Designed and Created by:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/DesignedByTxt"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="20sp"
        android:layout_below="@+id/CreditsTitleTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Zachari Barnes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DesignerTxt"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="20sp"
        android:layout_below="@+id/DesignedByTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Music By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/MusicByTxt"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="20sp"
        android:layout_below="@+id/DesignerTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Isaiah Shanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MusicianTxt"
        android:textStyle="normal|bold"
        android:textColor="?android:attr/textColorPrimaryNoDisable"
        android:textSize="20sp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/MusicByTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="And By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/andMusicBy"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/MusicianTxt"
        android:layout_alignEnd="@+id/CreditsTitleTxt"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Nene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Nene"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@+id/andMusicBy"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="http://opengameart.org/users/nene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FreeSoundTxt"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_below="@+id/Nene"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Images from:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImagesByTxt"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/FreeSoundTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="By Freepik, VectEzy, and Brusheezy \n Vecteezy.com \n Brusheezy.com \n Freepik.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ImgCreditsTxt"
        android:textColor="@android:color/black"
        android:layout_below="@+id/ImagesByTxt"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Sound Effects From:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SoundEffectsTxt"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/ImgCreditsTxt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=" www.freesound.org/people/fins/sounds/171497/ \n www.freesound.org/people/fins/sounds/191754/ \n www.freesound.org/people/fins/sounds/191594/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@+id/SoundEffectsTxt"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold" />

</RelativeLayout>
