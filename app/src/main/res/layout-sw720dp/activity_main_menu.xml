<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_light_bg"
    android:weightSum="1"
    android:id="@+id/menuLayout">

    <TextView
        android:text="Welcome To Haxor!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Thank You for trying the App!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@android:color/black" />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <Button
        android:text="StartHack()"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/btnStart"
        android:contentDescription="Start The Game"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <Button
        android:text="Tutorial()"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/btnTutorial"
        android:contentDescription="Start the Tutorial"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <Button
        android:text="Options()"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/btnOptions"
        android:contentDescription="Setup Options"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <Button
        android:text="Credits()"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/btnCredits"
        android:contentDescription="Credits"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5" />

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <Button
        android:text="Exit()"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/btnExit"
        android:contentDescription="Setup Options"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"/>

    <View
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"/>

    <com.google.android.gms.ads.NativeExpressAdView
        android:id="@+id/nativeAdView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adUnitId="@string/menu_native_ad_unit_id"
        ads:adSize="640x265">
    </com.google.android.gms.ads.NativeExpressAdView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/menu_Banner_ad_unit_id"
        tools:ignore="ObsoleteLayoutParam">
    </com.google.android.gms.ads.AdView>

</LinearLayout>
